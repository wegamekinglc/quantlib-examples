{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_MODULE_PATH": "${sourceDir}/cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}"
      }
    },
    {
      "name": "Release-windows",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SKIP_TESTS": "false",
        "MSVC_RUNTIME": "static"
      }
    },
    {
      "name": "Debug-windows",
      "inherits": "base",
      "generator": "Ninja",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "SKIP_TESTS": "false",
            "MSVC_RUNTIME": "static"
        }
    },
    {
      "name": "Release-linux",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "off",
        "SKIP_TESTS": "false"
      }
    },
    {
      "name": "Debug-linux",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "off",
        "SKIP_TESTS": "false"
      }
    }
  ]
}